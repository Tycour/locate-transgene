
println "\n5. Sorting & indexing alignment file.\n"

process sortAlignment {

    script:
    """
    samtools sort ${params.workdir}/${params.sampleID}.sam > ${params.workdir}/${params.sampleID}.sorted.sam
    """
}

process indexAlignment {

    script:
    """
    samtools index ${params.workdir}/${params.sampleID}.sorted.sam
    """
}