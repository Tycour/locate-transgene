println "\n4. Aligning reads to reference genome.\n"

process mapReads2Genome {

    script:
    """
    minimap2 -a -o ${params.sampleID}.sam $params.genome ${params.workdir}/${params.sampleID}.fastq.gz
    """
}

println "\n5. Sorting & indexing alignment file.\n"

process sortAlignment {

    script:
    """
    minimap2 -a -o ${params.sampleID}.sam $params.genome ${params.workdir}/${params.sampleID}.fastq.gz
    """
}

process indexAlignment {

    script:
    """
    minimap2 -a -o ${params.sampleID}.sam $params.genome ${params.workdir}/${params.sampleID}.fastq.gz
    """
